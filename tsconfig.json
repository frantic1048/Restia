{
  "compilerOptions": {
    "jsx": "preserve",
    "lib": ["dom"],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "esnext",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "typeRoots": ["./node_modules/@types"],
    "baseUrl": "./src",
  },
  "include": ["src"]
}