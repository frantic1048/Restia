{
    "compilerOptions": {
        "composite": true,
        "jsx": "react",
        "lib": ["dom"],
        "moduleResolution": "node",
        "module": "esnext",
        "target": "esnext",
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "verbatimModuleSyntax": true
    },
    "include": ["src"]
}
