{
    "extends": [
        "config:best-practices",
        ":pinVersions",
        ":automergePatch",
        ":automergeDigest",
        ":maintainLockFilesWeekly",
        ":semanticCommits",
        ":semanticCommitType(chore)",
        ":semanticCommitScope(deps)"
    ],
    "postUpdateOptions": [
        "yarnDedupeHighest"
    ],
    "reviewers": [
        "frantic1048"
    ],
    "packageRules": [
        {
            "groupName": "linters and formatters",
            "automerge": true,
            "matchPackageNames": [
                "/^eslint$/",
                "/^@types/eslint$/",
                "/^@eslint//",
                "/^@types/eslint__js$/",
                "/^typescript-eslint$/",
                "/^eslint-plugin-/",
                "/^prettier$/"
            ]
        },
        {
            "groupName": "commitizen",
            "matchPackageNames": [
                "commitizen",
                "cz-customizable"
            ]
        },
        {
            "groupName": "gatsby",
            "matchPackageNames": [
                "/^gatsby$/",
                "/^gatsby-plugin-/",
                "/^gatsby-source-/",
                "/^gatsby-transformer-/",
                "/^gatsby-remark-/"
            ]
        }
    ]
}
